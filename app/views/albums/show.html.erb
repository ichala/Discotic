              <div class="col-md-6 mb-3">
                <label for="TrackLength" class="form-label">Track Length (min)</label>
                <input type="number" name="" id="TrackLength" class="form-control" placeholder="Track Length">
              </div>
              <div class="col-md-6 mb-3">
                <label for="TrackLink" class="form-label">Spotify Link</label>
                <input type="text" name="" id="TrackLink" class="form-control" placeholder="Track Link">
              </div>
            </div>
            <div class="modal-footer border-0">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-warning">Add to Album</button>
            </div>
          </form>
        </div>
      </div>
    </div>
