<div class="tab-container-one">
  <ul class="nav nav-tabs " id="myTab" role="tablist">
    <li class="nav-item nav-search-res active"><a class="nav-link active" href="#albums" role="tab" aria-controls="albums" data-bs-toggle="tab">Albums (<%= albums.length if albums %>)</a></li>
    <li class="nav-item nav-search-res"><a class="nav-link" href="#tracks" role="tab" aria-controls="tracks" data-bs-toggle="tab">Tracks(<%= tracks.length if tracks %>)</a></li>
    <li class="nav-item nav-search-res"><a class="nav-link" href="#artists" role="tab" aria-controls="artists" data-bs-toggle="tab">Artists(<%= artists.length if artists %>)</a></li>
  </ul>
  <div class="tab-content text-white">
    <div class="tab-pane active" id="albums" role="tabpanel" aria-labelledby="albums-tab">
      <div class="row" >
        <% if (albums.length > 0) %>
          <% albums.each do |album|%>
            <div class="col-md-6" >
            <%= link_to "/albums/#{album.id}?search=true",class:"card_link text-white" do %>
              <div class="card m-3 bg-main res-card" style="max-width: 540px;">
                <div class="row g-0">
                  <div class="col-lg-5">
                    <%= image_tag (album.image_data),alt: "Example Musics image" ,width:"200px",height:"200px"%>
                  </div>
                  <div class="col-lg-7 ">
                    <div class="card-body ml-4">
                      <h5 class="card-title"> <%= album.name %></h5>
                      <p class="card-text trancate"><%= album.description[0..90] %>...</p>
                      <p class="card-text trancate">By <small class="text-sec"><%= album.artist %></small></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            </div>
          <%end %>
        <% else %>
          <div class="col-md-12" >
            <div class="card m-3 bg-main" >
              <div class="row g-0">
                <div class="row">
                  <div class="card-body d-flex flex-column text-center align-items-center justify-content-center">
                    <h5 class="card-title
                    "> No Albums Found</h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
    <div class="tab-pane" id="tracks" role="tabpanel" aria-labelledby="tracks-tab">
      <div class="row" >
        <% if (tracks.length > 0) %>
          <% tracks.each do |track|%>
            <div class="col-md-6" >
            <%= link_to album_path(track.album_id),class:"card_link text-white" do %>
              <div class="card p-2 m-3 bg-main tra-card" >
                <div class="row g-0 d-flex align-items-center justify-content-center">
                  <div class="col-lg-3 d-flex align-items-center justify-content-center">
                    <%= image_tag (Album.find(track.image_data)),alt: "Example Musics image" ,width:"100px",height:"100px"%>
                  </div>
                  <div class="col-lg-9 ">
                    <div class="card-body text-start">
                      <h5 class="card-title"> <%= track.name %></h5>
                      <p class="card-text trancate">From <small class="text-sec"><%= Album.find(track.album_id).name[0..60] %></small></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            </div>
          <%end %>
        <% else %>
          <div class="col-md-12" >
            <div class="card m-3 bg-main" >
              <div class="row g-0">
                <div class="row">
                  <div class="card-body d-flex flex-column text-center align-items-center justify-content-center">
                    <h5 class="card-title
                    "> No Tracks Found</h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
    <div class="tab-pane" id="artists" role="tabpanel" aria-labelledby="artists-tab">
      <div class="row" >
        <% if (artists.length > 0) %>
          <% artists.each do |artist|%>
              <div class="col-md-4" >
               <%= link_to "/albums/#{artist.id}?search=true",class:"card_link text-white" do %>
                <div class="card m-3 bg-main card-art" >
                  <div class="row g-0">
                    <div class="row">
                      <div class="card-body d-flex flex-column text-center align-items-center justify-content-center">
                        <%= image_tag (artist.image_data),class:'rounded-circle',width:"100px",height:"100px"%>
                        <h5 class="card-title mt-2"> <%= artist.artist[0..40] %>...</h5>
                        <p class="card-text trancate">From <small class="text-sec"><%= artist.name[0..60] %></small></p>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
              </div>
          <%end %>
        <% else %>
          <div class="col-md-12" >
            <div class="card m-3 bg-main" >
              <div class="row g-0">
                <div class="row">
                  <div class="card-body d-flex flex-column text-center align-items-center justify-content-center">
                    <h5 class="card-title
                    "> No Artist Found</h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
